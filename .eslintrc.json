{
  "extends": ["react-app", "react-app/jest", "prettier"],
  "plugins": ["unused-imports"],
  "rules": {
    "no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",      // allow _var
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
